<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.shopster.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
        <action
            android:id="@+id/action_navigation_home_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.shopster.ui.dashboard.AccountFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_wishListFragment"
            app:destination="@id/wishListFragment" />
        <action
            android:id="@+id/action_navigation_dashboard_to_beaconNotificationsFragment"
            app:destination="@id/beaconNotificationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.shopster.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.example.shopster.ui.details.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" />
    <fragment
        android:id="@+id/wishListFragment"
        android:name="com.example.shopster.ui.wishlist.WishListFragment"
        android:label="fragment_wishlist"
        tools:layout="@layout/fragment_wishlist" >
        <action
            android:id="@+id/action_wishListFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/beaconNotificationsFragment"
        android:name="com.example.shopster.ui.beaconNotifications.BeaconNotificationsFragment"
        android:label="fragment_beacon_notifications"
        tools:layout="@layout/fragment_beacon_notifications" >
        <action
            android:id="@+id/action_beaconNotificationsFragment_to_beaconDetailsFragment"
            app:destination="@id/beaconDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/beaconDetailsFragment"
        android:name="com.example.shopster.ui.beaconNotifications.BeaconDetailsFragment"
        android:label="fragment_beacon_details"
        tools:layout="@layout/fragment_beacon_details" >
        <action
            android:id="@+id/action_beaconDetailsFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
</navigation>